<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:listViewAttr="http://schemas.android.com/apk/res/co.ritzonex.xiaoxiaoxiaotu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.ritzonex.xiaoxiaoxiaotu.ItemFragment" >

    <cn.trinea.android.common.view.DropDownListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        listViewAttr:isAutoLoadOnBottom="true"
        listViewAttr:isDropDownStyle="false"
        listViewAttr:isOnBottomStyle="true" />

    <ImageView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/error" />

</FrameLayout>